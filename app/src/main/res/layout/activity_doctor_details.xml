<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBabyPowder">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="35dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number: " />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail: " />

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: " />
        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonEditDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueMunsell"
            android:onClick="clickEditDoctorButton"
            android:text="Edit"
            android:textColor="@color/colorAlabaster" />
    </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/recyclerViewAppointments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />






</LinearLayout>