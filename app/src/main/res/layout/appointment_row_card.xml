<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/doctorCard"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueMunsell"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointmentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAlabaster"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:text="Dr. Enver Altay"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/doctorSpecialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAlabaster"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:text="Cardiology"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="15sp"
                android:padding="0dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAlabaster">

            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="16dp"
                android:text="Goztepe Hospital"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"
                android:text="24.01.2021"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_centerVertical="true"
                android:text="13:45"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>